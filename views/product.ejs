        $(document).ready(function () {
    $('.delete-article').on('click', function (e) {
        $target = $(e.target);
        const id = $target.attr('data-id');
        $.ajax({
            type: 'DELETE',
            url: '/products/' + id,
            success: function (response) {
                alert('Product Deleted');
                window.location.href = '/allproducts';
            },
            error: function (err) {
                console.log(err);
            }
        });
    });
});




